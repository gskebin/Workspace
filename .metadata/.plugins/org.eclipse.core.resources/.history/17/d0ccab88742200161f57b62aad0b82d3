package parkjugod;

public class Ex09p {

	public static void main(String[] args) {
		
		int i = 0;
		int j = 0;
		while (true) {
			
			i++;
			System.out.println(">>>>> i : " + i);
			
			if(i%2 == 0){
				i = i * -1;
				j = j + i;
				i = i * -1;
			} else {
				j = j + i;
			}

			if(i > 100){
				System.out.println(">>>>> res  i : " + i);
				break;
			}
			
		}
	}
}
