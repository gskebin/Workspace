package parkjugod;

public class Ex09p {

	public static void main(String[] args) {
		
		int i = 0;
		int j = 0;
		while (true) {
			
			i++;
			if(i%2 == 0){
				j = i * -1;
				
			}

			if(i > 100){
				System.out.println(">>>>> i : " + i);
				System.out.println(">>>>> j : " + j);
				break;
			}
			
		}
	}
}
